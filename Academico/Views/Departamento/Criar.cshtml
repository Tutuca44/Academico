@model TbDepartamento
@{
    ViewData["Title"] = "Criar Departamento";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Departamento</h1>

</div>

<form asp-controller="Departamento" asp-action="Criar" method="post">   
        <div class="form-group">
            <input type="hidden" asp-for="IdDepartamento" class="form-control" value="@Model.IdDepartamento" />
        </div>
        <div class="form-group">
            <label for="nome departamento">Nome Departamento</label>
            <input type="text" asp-for="NmDepartamento" class="form-control" placeholder="Digite o nome do departamento" />
            @Html.ValidationMessageFor(x => x.NmDepartamento)
        </div>
           <div class="form-group">
            <label for="localização departamento">Localização</label>
            <input type="text" asp-for="Localizacao" class="form-control" placeholder="Digite o localização do departamento" />
             @Html.ValidationMessageFor(x => x.Localizacao)
        </div>
        
           <div class="form-group">
            <label for="id_gerente departamento">Gerente</label>
            <input type="text" asp-for="IdGerente" class="form-control" placeholder="Digite o nome do gerente do departamento" />
             @Html.ValidationMessageFor(x => x.IdGerente)
        </div>      
        
       <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Departamento" asp-action="Index" role="button">Volta</a>
</form>