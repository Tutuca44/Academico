@model TbEmpregado
@{
    ViewData["Title"] = "Criar Empregado";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Departamento</h1>

</div>

<form asp-controller="Empregado" asp-action="Criar" method="post">       
        <div class="form-group">
            <label for="nome Empregado">Nome Empregado</label>
            <input type="text" asp-for="NmEmpregado" class="form-control" placeholder="Digite o nome do Empregado" />
            @Html.ValidationMessageFor(x => x.NmEmpregado)
        </div>
           <div class="form-group">
            <label for="Descriçao do Cargo do Empregado">DsCargos</label>
            <input type="text" asp-for="DsCargos" class="form-control" placeholder="Digite o localização do departamento" />
             @Html.ValidationMessageFor(x => x.DsCargos)
        </div>
        
           <div class="form-group">
            <label for="id_gerente ">Gerente</label>
            <input type="text" asp-for="IdGerete" class="form-control" placeholder="Digite o nome do gerente do departamento" />
             @Html.ValidationMessageFor(x => x.IdGerete)
        </div>     
        <div class="form-group">
            <label for="DtNascimento Empregado">Gerente</label>
            <input type="text" asp-for="DtNascimento" class="form-control" placeholder="Digite a  data de nascimento" />
             @Html.ValidationMessageFor(x => x.DtNascimento)
        </div> 
        <div class="form-group">
            <label for="id_gerente departamento">Gerente</label>
            <input type="text" asp-for="Salario" class="form-control" placeholder="Digite a  data de nascimento" />
             @Html.ValidationMessageFor(x => x.Salario)
        </div>   
        
        
       <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Empregado" asp-action="Index" role="button">Volta</a>
</form>