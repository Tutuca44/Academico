@model List<TbEmpregado>
@{
    ViewData["Title"] = "Listagem de Empregados";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Empregado" asp-action="Criar">Adicionar novo empregado</a>
    </div>
    <br />

    <h1 class=display-4>Listagem de Empregados</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID Empregado</th>
                <th scope="col">Nome Empregado</th>
                <th scope="col">Iniciais do Empregado</th>
                <th scope="col">Cargo</th>
                <th scope="col">ID Gerente</th>
                <th scope="col">Data de Nascimento</th>
                <th scope="col">Salário</th>
                <th scope="col">Comissão</th>
                <th scope="col">ID Departamento</th>
                <th scope="col">Ativo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (TbEmpregado empregado in Model)
                {
                    <tr>
                        <th scope="row">@empregado.IdEmpregado</th>
                        <td>@empregado.NmEmpregado</td>
                        <td>@empregado.IniciaisEmpregado</td>
                        <td>@empregado.DsCargos</td>
                        <td>@empregado.IdGerete</td>
                        <td>@empregado.DtNascimento</td>
                        <td>@empregado.Salario</td>
                        <td>@empregado.Comissao</td>
                        <td>@empregado.IdDepartamento</td>
                        <td>@empregado.FgAtivo</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-primary" asp-route-id="@empregado.IdEmpregado" asp-controller="Empregado" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@empregado.IdEmpregado" asp-controller="Empregado" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11">Nenhum empregado encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
